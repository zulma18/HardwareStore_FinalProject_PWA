@model Logins_Model
@{
    Layout = null;
    ViewData["title"] = "Inicio de Sesion";
}

@if (TempData["messageLogin"] != null)
{
    <div id="messageLogin" class="alert alert-primary" role="alert">
        @TempData["messageLogin"]
    </div>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Material Login Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        body {
            background-size: cover;
            background-position: center;
        }

        .card {
            background-color: #72B1B7;
            border-radius: 10px;
            width: 500px;
            height: 500px;
            opacity: 0.8;
        }

        .input-group-text {
            background-color: #000000;
            color: #c62828;
            border: none;
        }

        form {
            width: 90%;
        }

        .form-group label {
            font-weight: bold;
            color: #555;
        }

        .form-control {
            background-color: #000000;
            color: #ffffff;
            border: none;
        }

            .form-control::placeholder {
                color: #ffffff;
            }

        .btn-primary {
            background-color: #e53935;
            border: none;
        }

            .btn-primary:hover {
                background-color: #c62828;
            }

        .forgot-password a {
            color: #ffffff;
        }

        @@keyframes slideOut {
            from {
                transform: translateY(0);
            }

            to {
                transform: translateY(-100%);
            }
        }

        .alert {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            padding: 10px;
            background-color: #f8d7da;
            color: #721c24;
            text-align: center;
            animation: slideIn 0.5s forwards, slideOut 0.5s forwards 3.5s;
            display: none;
        }

    </style>
</head>

<body>
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="card p-4 shadow-lg d-flex justify-content-center align-items-center">
            <h2 class="text-center mb-4 text-white">Inicio de Sesion</h2>
            <form asp-action="Login" asp-controller="Login" method="post">
                <div class="form-group mb-3">
                    <label for="username" class="text-white">Username:</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                        <input asp-for="LoginUser" type="text" class="form-control" placeholder="Username">
                        <span asp-validation-for="LoginUser" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label for="password" class="text-white">Password:</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input asp-for="LoginPassword" type="password" class="form-control" placeholder="Password">
                        <span asp-validation-for="LoginPassword" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary w-100 mt-3 mb-5">Iniciar Sesion</button>
            </form>
        </div>
    </div>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var messageElement = document.getElementById("messageLogin");
            if (messageElement) {
                messageElement.style.display = 'block';
            }
        });

        setTimeout(function () {
            var messageElement = document.getElementById("messageLogin");
            if (messageElement) {
                messageElement.style.animation = 'slideOut 0.2s forwards';
                setTimeout(function () {
                    messageElement.style.display = 'none';
                }, 500);
            }
        }, 4000);
    </script>
</body>
</html>
