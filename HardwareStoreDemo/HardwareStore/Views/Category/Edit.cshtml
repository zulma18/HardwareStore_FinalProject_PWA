@model HardwareStore.Models.Category

@{
    ViewData["Title"] = "Edit";
    ViewData["TitlePage"] = "Actualizar Categoria";
}

<section class="bg-white py-3 px-4 container rounded-2" style="max-width:800px;">
    <h4 class="pt-2">Datos de la Categoria</h4>
    <hr />
    <div class="row px-md-3">
        <div class="col-md-12">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CategoryName" class="control-label"></label><b class="text-danger"> *</b>
                    <input asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label><b class="text-danger"> *</b>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-warning">Editar <i class="lni lni-pencil-alt"></i></button>
                    <a class="btn btn-primary" asp-action="Index">Volver a la lista <i class="lni lni-arrow-left"></i></a>
                </div>
            </form>
        </div>
    </div>

</section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
