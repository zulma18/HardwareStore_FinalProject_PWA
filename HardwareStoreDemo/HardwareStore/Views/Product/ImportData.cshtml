@{
    ViewData["Title"] = "Importar Datos";

    ViewData["TitlePage"] = "Importar Datos desde Excel";
}

<section class="bg-white py-3 px-4 container rounded-2" style="max-width:800px;">
    <h4 class="pt-2">Importar Datos</h4>
    <hr />

    @if (TempData["message"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["message"]
            <br />
            <p>Por favor Revise su Archivo e Intente de Nuevo</p>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="row px-md-3">
        <div class="col-md-12">
            <form asp-action="ImportData" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label class="form-label">Suba su archivo de Excel</label>
                    <input type="file" class="form-control" name="file" />
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success">Importar Datos<i class="lni lni-save"></i></button>
                    <a class="btn btn-primary" asp-action="Index">Volver a la lista <i class="lni lni-arrow-left"></i></a>
                </div>
            </form>
        </div>
    </div>
</section>